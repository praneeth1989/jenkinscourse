node {
  // job
    stage('build') {
      println('so far so good...')
    }
    stage('test') {
      println('A test has passed!')
      sh 'exit 0'
    }
 post {
        always {
	    /* Use slackNotifier.groovy from shared library and provide current build result as parameter */   
            slackNotifier(currentBuild.currentResult)
            cleanWs()
        }
    }
}
